<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/opt_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_format_bold_24"
                android:backgroundTint="@color/grey" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Bold"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opt_italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_format_italic_24"
                android:backgroundTint="@color/grey" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Italic"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opt_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_format_size_24"
                android:backgroundTint="@color/grey" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Font Size"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opt_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@android:color/holo_red_light" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Red"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opt_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@android:color/holo_green_light" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Green"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opt_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="@android:color/holo_blue_light" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Blue"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/opt_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_color_lens_24"
                android:backgroundTint="@color/grey" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Custom"
                android:textAlignment="center"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>